---
cluster: "hawk"

form:
  - cs_version
  - ha_partition
  - ha_cpus
  - ha_gpus
  - ha_mem
  - ha_reservation
  - ha_qos
  - bc_account
  - bc_num_hours
  - email
  - working_dir

attributes:
  cs_version:
    label: "Codeserver Version"
    help: "<small>Supported version of Codeserver available."
    widget: select
    options:
      - ["4.16", "4.16.1"]

  working_dir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"

  ha_partition:
    label: "Partition"
    value: "dev"
    required: true
    help: "<small>Partition to submit the job to</small>"
    widget: text_field

  ha_cpus:
    label: "#CPUs"
    widget: "number_field"
    help: "<small>Number of CPU cores to allocate</small>"
    required: true
    min: 1
    value: "1"

  ha_gpus:
    label: "#GPUs (optional)"
    widget: "number_field"
    help: "<small>Number of GPUs to allocate (don't forget to select a partition with GPUs)</small>"
    min: 1
    max: 2
    value: ""

  ha_mem:
    label: "Memory (GB) (optional)"
    widget: "number_field"
    help: "<small>Amount of memory to allocate</small>"
  
  ha_reservation:
    label: "Reservation (optional)"
    help: "<small>For special occassions a reservation may be given</small>" 
  
  ha_qos:
    label: "QOS (optional)"
    help: "<small>For special job limits a QOS may be given</small>"

  bc_account:
    label: "Project code"
 
  bc_num_hours:
    label: "Runtime (in hours)"

  email:
    label: "Email address"
    help: "<small>Address used to send start of job notification</small>"

